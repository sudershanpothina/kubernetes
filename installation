# apt update -y && apt upgrade -y && apt install ansible -y 

- hosts: localhost
  become: yes
  tasks:
    - name: update
      apt:
        update_cache: yes
    - name: install transport
      apt:
        name: apt-transport-https
        state: present
    - name: add key
      apt_key:
        url: "https://packages.cloud.google.com/apt/doc/apt-key.gpg"
        state: present
    - name: add repository
      apt_repository:
        repo: deb http://apt.kubernetes.io/ kubernetes-xenial main
        state: present
    - name: install containerd kubectl
      apt:
        name: "{{ item }}"
        state: present
      loop:
        - kubelet
        - kubeadm
        - kubectl
        - containerd
    - name: configure containerd modules
      copy:
        dest: /etc/modules-load.d/containerd.conf
        content: |
          overlay
          br_netfilter
    - name: run shell commands
      shell: "modprobe {{ item }}"
      loop:
        - overlay
        - br_netfilter
    - name: update kernel parameters
      copy:
        dest: /etc/sysctl.d/99-kubernetes-cri.conf
        content: |
          net.bridge.bridge-nf-call-iptables = 1
          net.bridge.bridge-nf-call-ip6tables = 1
          net.ipv4.ip_forward = 1

    - name: run shell commands
      shell: sysctl --system
    - name: create dir
      file:
        path: /etc/containerd
        state: directory
    - name: copy containerd default config
      shell: containerd config default > /etc/containerd/config.toml
    - name: restart containerd
      service:
        name: containerd
        state: restarted
    - name: disable swap
      shell: swapoff -a

# comment that out
nano /etc/fstab # comment swap
# kubeadm init
kubeadm init --cri-socket /run/containerd/containerd.sock

apt remove ansible


mkdir -p $HOME/.kube
sudo cp -i /etc/kubernetes/admin.conf $HOME/.kube/config
sudo chown $(id -u):$(id -g) $HOME/.kube/config


kubectl apply -f https://docs.projectcalico.org/v3.14/manifests/calico.yaml
